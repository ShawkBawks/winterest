    <div class="container">


        <form id="contact" action="/newArticles" method="post">
          <div class="row login_box">
              <!-- <div class="col-md-12 col-xs-12" align="center"> -->
          <h3>Article Submission Form</h3>
          <fieldset>
            <input placeholder="Title" name="title" type="text" tabindex="1" required autofocus>
          </fieldset>
          <fieldset>
            <input placeholder="Article Thumbnail URL" type="text" name="thumbnail"tabindex="2" required>
          </fieldset>
          <fieldset>
            <input placeholder="Article URL" type="text" name="url" tabindex="3" required>
          </fieldset>
          <fieldset>
              <select id="new-article-form__category" name="topic" data-category-selected="CA">
                  <option value="Food">Food</option>
                  <option value="Household">Household</option>
                  <option value="Animals">Animals</option>
                  <option value="Outdoors">Outdoors</option>
                  <option value="Technology">Technology</option>
                  <option value="Personal">Personal</option>
                  <option value="Workplace">Workplace</option>
                  <option value="Fitness">Fitness</option>
              </select>
          </fieldset>
          <fieldset>
            <textarea placeholder="Description"  name="description" tabindex="5" required></textarea>
          </fieldset>
          <fieldset>
            <button type="submit" id="contact-submit">Create</button>
        </form>
      </div>




