<!DOCTYPE html>
<html lang="en">
  <head>
    <title>New Article Submission</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
    <link rel="stylesheet" href="/styles/nav-bar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/grid.css" type="text/css" />
    <link rel="stylesheet" href="/styles/addArticle.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/grid.js"></script>

  </head>
<header><% include partials/_header.ejs %></header>
  <body>
    <h1 style=text-align:center>New Article Submission!</h1>

    <form action="/newArticles" method="post" id="new-article-form" class="new-article-form">
      <div class="new-article-form__field-wrapper">

        <label for="new-article-form__title">Title</label>
        <input type="text" name="title" placeholder="Title" id="new-article-form__title">
      </div>

      <div class="new-article-form__field-wrapper">
        <label for="new-article-form__description">Description</label>
        <textarea placeholder="Description" name="description" id="article-form__description" cols="30" rows="10"></textarea>
      </div>

      <div class="new-article-form__field-wrapper">
        <label for="new-article-form__thumbnail">Thumbnail Image</label>
        <input placeholder="Thumbnail Image" type="text" name="thumbnail" id="new-article-form__thumbnail">
        <!-- <input type='file' onchange="readURL(this);" />
        <img id="blah" src="http://placehold.it/180" alt="your image" /> -->
      </div>

      <div class="new-article-form__field-wrapper">
        <label for="new-article-form__thumbnail">URL</label>
        <input placeholder="Website URL" type="text" name="url" id="new-article-form__thumbnail">
      </div>


        <div class="new-article-form__field-wrapper">
          <label for="new-article-form__category">Category</label>
          <select id="new-article-form__category" name="topic" data-category-selected="CA">
              <option value="Food & Beverage">Food & Beverage</option>
              <option value="Home Improvement">Home Improvement</option>
              <option value="Animals">Animals</option>
              <option value="Outdoors">Outdoors</option>
              <option value="Technology">Technology</option>
              <option value="Personal Development">Personal Development</option>
              <option value="Workplace Development">Workplace Development</option>
              <option value="Health & Fitness">Health & Fitness</option>
          </select>
        </div>

        <div class="new-article-form__field-wrapper">
            <button input type="submit">Create</button>
            <a id="article-form__cancel" href="./">Cancel</a>
        </div>

    </form>
  </body>
</html>
